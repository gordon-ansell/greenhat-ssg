Options +MultiViews
{% if cfg.site.redirect301 -%}
	{%- for fromf,tof in cfg.site.redirect301 %}
Redirect 301 {{fromf}} {{ctx.qualify(tof)}}
	{%- endfor -%}
{% endif %}
RewriteEngine On 
RewriteBase /
RewriteCond %{REQUEST_URI} !^/[0-9]+\..+\.cpaneldcv$
RewriteCond %{REQUEST_URI} !^/\.well-known/cpanel-dcv/[0-9a-zA-Z_-]+$
RewriteCond %{REQUEST_URI} !^/[A-F0-9]{32}\.txt$
RewriteCond %{REQUEST_URI} !^/\.well-known/pki-validation/[A-F0-9]{32}\.txt(?:\ Comodo\ DCV)?$
RewriteCond %{SERVER_PORT} 80 
RewriteRule ^(.*)$ {{cfg.site.urlNonSSL}}/$1 [R,L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/tags/[0-9a-zA-Z_-]+$
RewriteRule ^tags/(.+).html/$ /tags/$1/ [NC,R=301,L] 

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/cats/[0-9a-zA-Z_-]+$
RewriteRule ^cats/(.+).html/$ /tags/$1/ [NC,R=301,L] 

RewriteCond %{THE_REQUEST} ^GET\s(.*/)index\.html [NC]
RewriteRule . %1/ [NE,R=301,L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^[0-9a-zA-Z_-]+/$
RewriteRule ^(.+).html/$ /$1/ [NC,R=301,L] 

RewriteCond %{THE_REQUEST} ^GET\s.+\.html [NC]
RewriteRule ^(.+)\.html$ /$1/ [NE,R=301,L,NC]

RewriteCond %{REQUEST_URI} !\.html$ [NC]
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule . %{REQUEST_URI}.html [L]

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml application/xml application/xhtml+xml text/css text/javascript application/javascript application/x-javascript
</IfModule>
<ifModule mod_gzip.c>
	mod_gzip_on Yes
	mod_gzip_dechunk Yes
	mod_gzip_item_include file .(html?|txt|css|js|php|pl)$
	mod_gzip_item_include handler ^cgi-script$
	mod_gzip_item_include mime ^text/.*
	mod_gzip_item_include mime ^application/x-javascript.*
	mod_gzip_item_exclude mime ^image/.*
	mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</ifModule>

{% if cfg.site.cache == true %}
<filesMatch ".(ico|jpg|jpeg|png|gif)$">
 Header set Cache-Control "max-age={{cfg.site.cacheImagesMax}}, public, no-cache"
</filesMatch>
<filesMatch ".(css|js)$">
 Header set Cache-Control "max-age={{cfg.site.cacheCssJsMax}}, public, no-cache"
</filesMatch>
{% endif %}

AddType application/json .json
ErrorDocument 404 /404/index.html