        {%- if item.url -%}
            <span class="p-author h-card vcard">
                <meta name="u-url url" content="{{item.url}}" />
                <meta name="p-name fn" content="{{-item.name-}}" />
                {%- if item.image -%}
                    <meta name="photo" content="{{item.image}}" />
